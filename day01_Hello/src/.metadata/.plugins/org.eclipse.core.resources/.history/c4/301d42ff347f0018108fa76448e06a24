package type.primitive;

/**
 * 문자 1개를 저장하는 타입 : char
 * @author JACK
 * 내부적으로 숫자로 저장하는 특징이 있다.
 */
public class CharTest {

	public static void main(String[] args) {
		// 1. 캐릭터 타입 선언
		char input;
		
		// 2. 초기화
		input = 'a';
		
		// 3.사용
		System.out.println("input : " + input);
		
		// 4. char 가 내부적으로 숫자로 저장되는 것 확인
		int code = input;
		
		
	}

}
